{
    "manifest_version": 2,
    "name": "YouTube Homepage Thumbnail Grid Customizer",
    "version": "1.0",
    "description": "Customize YouTube's homepage thumbnail grid layout, because apparently they don't know how to do it. ",
    "icons": {
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    },
    "permissions": [
      "storage",
      "tabs",
      "*://*.youtube.com/*"
    ],
    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/*"],
        "js": ["content_scripts/thumbnailResizer.js"],
        "run_at": "document_end",
        "all_frames": false
      }
    ],
    "browser_action": {
      "default_icon": "icons/icon-48.png",
      "default_title": "YouTube Grid Customizer",
      "default_popup": "popup/popup.html"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  }